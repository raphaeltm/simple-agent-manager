<style>
  .hero {
    position: relative;
    padding: 160px 0 80px;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .hero {
      padding: 180px 0 120px;
    }
  }

  .hero-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 600px;
    background: radial-gradient(ellipse at center, var(--color-accent-glow) 0%, transparent 70%);
    pointer-events: none;
    animation: glow-pulse 6s ease-in-out infinite;
  }

  .hero-content {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    color: var(--color-fg-muted);
    padding: 6px 16px;
    border: 1px solid var(--color-border);
    border-radius: 100px;
    margin-bottom: 32px;
  }

  .badge-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-accent);
    animation: glow-pulse 2s ease-in-out infinite;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 6vw, 4rem);
    font-weight: 600;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--color-fg-primary);
    margin-bottom: 24px;
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-success) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: clamp(1rem, 2vw, 1.25rem);
    color: var(--color-fg-muted);
    max-width: 560px;
    line-height: 1.7;
    margin-bottom: 40px;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
    margin-bottom: 64px;
  }

  .btn-hero {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-family: var(--font-body);
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 12px 28px;
    border-radius: var(--radius-md);
    transition: all 0.2s;
    border: none;
    cursor: pointer;
  }

  .btn-hero-primary {
    background: var(--color-accent);
    color: white;
  }

  .btn-hero-primary:hover {
    background: var(--color-accent-hover);
    color: white;
    transform: translateY(-1px);
  }

  .btn-hero-secondary {
    background: var(--color-bg-surface);
    color: var(--color-fg-primary);
    border: 1px solid var(--color-border);
  }

  .btn-hero-secondary:hover {
    background: var(--color-bg-surface-hover);
    color: var(--color-fg-primary);
    border-color: var(--color-fg-dim);
  }

  /* Terminal */
  .terminal-preview {
    width: 100%;
    max-width: 720px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid var(--color-border);
    background: var(--color-bg-inset);
    box-shadow:
      0 0 0 1px var(--color-border-subtle),
      0 20px 60px rgba(0, 0, 0, 0.4),
      0 0 80px var(--color-accent-glow);
  }

  .terminal-chrome {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--color-bg-surface);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot-red { background: #ef4444; }
  .dot-yellow { background: #f59e0b; }
  .dot-green { background: #22c55e; }

  .terminal-title {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-fg-dim);
  }

  .terminal-body {
    padding: 20px;
    font-family: var(--font-mono);
    font-size: 0.8125rem;
    line-height: 1.8;
  }

  .terminal-line {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .terminal-line.output {
    color: var(--color-fg-muted);
  }

  .terminal-line.dim {
    color: var(--color-fg-dim);
  }

  .prompt {
    color: var(--color-accent);
    user-select: none;
  }

  .command {
    color: var(--color-fg-primary);
  }

  .accent-text {
    color: var(--color-accent);
  }

  .success-text {
    color: var(--color-success);
  }

  .cursor {
    color: var(--color-accent);
    animation: blink 1.2s step-end infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>
