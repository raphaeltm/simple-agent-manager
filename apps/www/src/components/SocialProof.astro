<section class="social-proof">
  <div class="container">
    <div class="proof-content animate-on-scroll">
      <span class="proof-label">Supports</span>
      <div class="proof-logos">
        <div class="proof-item">
          <svg width="28" height="28" viewBox="0 0 128 128" fill="none" aria-hidden="true">
            <rect width="128" height="128" rx="16" fill="#CC785C"/>
            <path d="M34 64C34 47.4 47.4 34 64 34C80.6 34 94 47.4 94 64C94 80.6 80.6 94 64 94C47.4 94 34 80.6 34 64Z" fill="white"/>
            <path d="M48 64C48 55.2 55.2 48 64 48V80C55.2 80 48 72.8 48 64Z" fill="#CC785C"/>
          </svg>
          <span>Claude Code</span>
        </div>
        <span class="proof-divider">+</span>
        <div class="proof-item">
          <svg width="28" height="28" viewBox="0 0 128 128" fill="none" aria-hidden="true">
            <rect width="128" height="128" rx="16" fill="#000"/>
            <circle cx="64" cy="64" r="32" fill="white"/>
          </svg>
          <span>OpenAI Codex</span>
        </div>
        <span class="proof-divider">+</span>
        <div class="proof-item">
          <svg width="28" height="28" viewBox="0 0 128 128" fill="none" aria-hidden="true">
            <rect width="128" height="128" rx="16" fill="#1A73E8"/>
            <path d="M40 64L64 40L88 64L64 88Z" fill="white"/>
          </svg>
          <span>Gemini CLI</span>
        </div>
      </div>
      <div class="proof-badges">
        <span class="badge">MIT Licensed</span>
        <span class="badge">Self-Hosted</span>
        <span class="badge">BYOC</span>
      </div>
    </div>
  </div>
</section>

<style>
  .social-proof {
    padding: 40px 0;
    border-top: 1px solid var(--color-border-subtle);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .proof-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .proof-content {
      flex-direction: row;
      justify-content: center;
      gap: 40px;
    }
  }

  .proof-label {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-fg-dim);
  }

  .proof-logos {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .proof-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    color: var(--color-fg-muted);
    font-weight: 500;
  }

  .proof-divider {
    color: var(--color-fg-dim);
    font-size: 0.875rem;
  }

  .proof-badges {
    display: flex;
    gap: 8px;
  }

  .badge {
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--color-accent);
    border: 1px solid var(--color-border);
    padding: 4px 12px;
    border-radius: 100px;
    letter-spacing: 0.02em;
  }
</style>
