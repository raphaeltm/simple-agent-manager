{
  "name": "@simple-agent-manager/acp-client",
  "version": "0.1.0",
  "private": true,
  "description": "ACP client components and hooks for structured agent conversations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest run --passWithNoTests",
